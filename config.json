{
  "experiment_name": "Resource Allocation Optimization Study",
  "description": "Cloud computing resource allocation using LP and MILP formulations",
  "data_generation": {
    "num_tasks": 50,
    "num_vm_types": 5,
    "time_horizon": 24,
    "budget": 5000.0,
    "task_revenue_range": [50, 500],
    "task_cpu_range": [1, 8],
    "task_mem_range": [2, 32],
    "task_duration_range": [1, 6],
    "vm_cost_range": [0.5, 4.0],
    "vm_cpu_range": [[2, 4], [4, 8], [8, 16], [16, 32], [32, 64]],
    "vm_mem_range": [[4, 8], [8, 16], [16, 32], [32, 64], [64, 128]],
    "vm_max_instances": 20
  },
  "optimization": {
    "solver": "glpk",
    "time_limit": 300,
    "mip_gap": 0.01
  },
  "sensitivity_analysis": {
    "budget_multipliers": [0.5, 0.75, 1.0, 1.25, 1.5, 2.0],
    "capacity_multipliers": [0.5, 0.75, 1.0, 1.25, 1.5, 2.0]
  },
  "output": {
    "save_intermediate": true,
    "generate_plots": true,
    "plot_format": "png",
    "plot_dpi": 300
  },
  "reproducibility": {
    "random_seed": 42,
    "document_dependencies": true
  }
}
